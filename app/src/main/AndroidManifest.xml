<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.personalizedlearningapp">

    <!-- 1. Grant Internet access -->
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PersonalizedLearningApp">

        <!-- 1. Login / Splash screen (start here) -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- 2. Sign-up or setup screen -->
        <activity android:name=".SignUpActivity" />

        <!-- 3. Interests selection -->
        <activity android:name=".InterestsActivity" />

        <!-- 4. Home / Dashboard -->
        <activity android:name=".HomeActivity" />

        <!-- 5. Quiz / Task screen -->
        <activity android:name=".TaskActivity" />

        <!-- 6. Results screen -->
        <activity android:name=".ResultsActivity" />

    </application>
</manifest>
