<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 1. Question 1 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQ1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvQuestion1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. What is 2 + 2?"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvQ1Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose the correct answer:"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>

                <RadioGroup
                    android:id="@+id/rgAnswers1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbQ1A"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"/>

                    <RadioButton
                        android:id="@+id/rbQ1B"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"/>

                    <RadioButton
                        android:id="@+id/rbQ1C"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5"/>
                </RadioGroup>

                <ImageButton
                    android:id="@+id/btnNext1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_arrow_forward"
                    app:tint="@android:color/white"
                    android:backgroundTint="@color/neonBlue"
                    android:contentDescription="@string/desc_next_question"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 2. Question 2 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQ2"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvQuestion2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2. Is the sky blue?"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvQ2Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Select yes or no:"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>

                <RadioGroup
                    android:id="@+id/rgAnswers2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbQ2Yes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Yes"/>

                    <RadioButton
                        android:id="@+id/rbQ2No"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No"/>
                </RadioGroup>

                <ImageButton
                    android:id="@+id/btnNext2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:padding="6dp"
                    app:srcCompat="@drawable/ic_arrow_forward"
                    app:tint="@android:color/white"
                    android:backgroundTint="@color/neonBlue"
                    android:contentDescription="@string/desc_next_question"
                    android:layout_gravity="end"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- 3. Question 3 -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardQ3"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvQuestion3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3. What is the capital of France?"
                    android:textSize="18sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:id="@+id/tvQ3Desc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Choose the correct answer:"
                    android:layout_marginTop="4dp"
                    android:textColor="@android:color/darker_gray"/>

                <RadioGroup
                    android:id="@+id/rgAnswers3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="8dp">

                    <RadioButton
                        android:id="@+id/rbQ3Paris"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paris"/>

                    <RadioButton
                        android:id="@+id/rbQ3Berlin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Berlin"/>

                    <RadioButton
                        android:id="@+id/rbQ3Rome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rome"/>
                </RadioGroup>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Submit -->
        <Button
            android:id="@+id/btnSubmit"
            android:layout_width="wrap_content"
            android:layout_height="56dp"
            android:text="@string/submit"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:paddingHorizontal="32dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/neonBlue"
            android:textColor="@android:color/white"/>

    </LinearLayout>
</ScrollView>
